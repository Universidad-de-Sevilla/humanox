{% extends "layout/coreui/principal.html.twig" %}
{% set active = 'people' %}
{% set title = 'People List'|trans %}

{% block content %}
    <h2>
        {{ title }}
        <a class="btn btn-primary pull-right" role="button" href="{{ path('person_add') }}"><i
                    class="fa fa-plus-circle"></i> {{ 'New'|trans }}</a>
    </h2>
    <table class="table">
        <thead>
        <tr>
            <th>{{ 'ID'|trans }}</th>
            <th>{{ 'Nombre'|trans }}</th>
            <th>{{ 'Alta'|trans }}</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for person in people %}
            <tr>
                <td><a href="{{ path('person_view', {'id': person.id}) }}">{{ person.id }}</a></td>
                <td>
                    <a href="{{ path('person_view', {'id': person.id}) }}">{{ person.nombre|e }} {{ person.apellidos|e }}</a>
                </td>
                <td>{{ person.creado|date('d/m/Y') }}</td>
                <td><a href="{{ path('person_edit', {'id': person.id}) }}">{{ 'Edit'|trans }}</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">{{ 'No people defined yet.'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% include "commons/pagination.html.twig" %}

{% endblock %}
