{% extends "layout/coreui/main.html.twig" %}
{% set active = 'people' %}
{% set title = 'Photo Edit'|trans ~ ': ' ~ person.firstName ~ ' ' ~ person.lastName %}

{% block css %}
    {{ parent() }}
    <link href="/assets/css/cropper.css" rel="stylesheet">
    <link href="/assets/css/cropper_quorum.css" rel="stylesheet">
{% endblock %}

{% block content %}
    <h2>{{ title }}</h2>
    <div class="row">
        <div class="col-lg-12">
            <div class="container-fluid photo-container" id="basic-example">
                <div class="row photo-main">
                    <div class="col-xs-12 col-sm-5">
                        <div class="photo-wrapper">
                            <img class="cropper" data-id_persona="{{ person.id }}"
                                 src="/private_upload/photo_booth/{{ person.id }}.jpg">
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-4">
                        <div class="photo-pre-wrapper clearfix">
                            <div class="photo-preview photo-preview-lg"></div>
                            <div class="photo-preview photo-preview-md"></div>
                        </div>
                    </div>
                </div>
                <div class="clearfix">
                    <div class="photo-button">
                        <button class="btn btn-primary" id="saveImage" type="button"><i
                                    class="fa fa-floppy-o"></i> {{ 'Save'|trans }}</button>
                        <label class="btn btn-info" for="inputImage" title="{{ 'New image'|trans }}">
                            <input class="hide" id="inputImage" description="file" type="file" accept="image/*"><i
                                    class="fa fa-upload"></i> {{ 'Upload image'|trans }}
                        </label>
                        <button class="btn btn-info" id="zoomIn" type="button"><i class="fa fa-search-plus"></i>
                        </button>
                        <button class="btn btn-info" id="zoomOut" type="button"><i class="fa fa-search-minus"></i>
                        </button>
                        <button class="btn btn-info" id="rotateLeft" type="button"><i class="fa fa-rotate-left"></i>
                        </button>
                        <button class="btn btn-info" id="rotateRight" type="button"><i class="fa fa-rotate-right"></i>
                        </button>
                        <button class="btn btn-danger" id="cancelar" type="button"
                                data-previous-url="{{ path('person_edit', {'id': person.id}) }}"><i
                                    class="fa fa-times"></i> {{ 'Cancel'|trans }}
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


{% block js %}
    {{ parent() }}
    <script src="/assets/js/cropper.min.js"></script>
    <script src="/assets/js/photo_edit.js"></script>
{% endblock %}

